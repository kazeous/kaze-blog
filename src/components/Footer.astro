---
import { FooterDescription, Hide } from '~/config';
---

<footer class="mt-[3dvh] text-center lg:mt-[4dvh]" transition:persist>
	{!Hide.includes('footerDescription') && <p class="mb-[1dvh] lg:mb-[2dvh]">{FooterDescription}</p>}
	<p class="text-neutral-700 opacity-75 dark:text-neutral-300">
		&copy; {new Date().getFullYear()} OUS production. Powered by <a
			class="underline"
			href="https://kazeous.com"
			target="_blank"
			rel="noopener"
			aria-label="Get to my main web here">Kazeous</a
		>. <a
			class="underline"
			href="https://blog.kazeous.com/posts/artwork-credits"
			target="_blank"
			rel="noopener"
			aria-label="Artwork Credits page">Artwork Credits</a
		>.
	</p>
</footer>
